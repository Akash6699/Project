      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-sm-12 mb-4 mb-xl-3">
              <h4 class="font-weight-bold text-dark">Update Your Details</h4>
            </div>
          </div>
          <div class="col-12 grid-margin stretch-card">

              <div class="card">
                <div class="card-body">
                  
                  <h4 class="card-title">Personal Details</h4>
              
                  <form class="forms-sample" method="POST" action="/patient/updatedetails/<%= userenroll.id %>?_method=patch">
                    <input type="hidden" name="_method" value="patch">
                    <div class="row">
                    
                    <div class="form-group col-sm-4 ">
                      <label for="exampleInputName1">Name</label>
                      <p><%= userenroll.name %></p>
                    </div>
                    <div class="form-group col-sm-4">
                      <label for="exampleInputName1">Email</label>
                      <p><%= userenroll.email %></p>
                    </div>
                    <div class="form-group col-sm-4">
                      <label for="exampleInputName1">Contact</label>
                      <p><%= userenroll.contact %></p>
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputName1">Age</label>
                      <input type="number" class="form-control" id="exampleInputName1" placeholder="Age" name="age" value="26" required>
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputName1">Height</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Height" name="height" value="6ft" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputName1">Weight</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Weight" name="weight" value="90ks" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleSelectGender">Gender</label>
                        <select class="form-control" id="exampleSelectGender" name="gender" required > 
                          <option>Male</option>
                          <option>Female</option>
                        </select>
                      </div>
                      <div class="form-group col-sm-6">
                        <label for="exampleSelectGender">Marital Status</label>
                          <select class="form-control" id="exampleSelectGender" name="mstatus" required >
                            <option>Single</option>
                            <option>Married</option>
                            <option>Divorce</option>
                            <option>Widow</option>
                          </select>
                        </div>
                      <div class="form-group col-sm-6">
                        <label for="exampleInputCity1">Father/Spouce name</label>
                        <input type="text" class="form-control" id="exampleInputCity1" placeholder="Father/Spouce name" name="father" value="father1213" required >
                      </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputName1">Education</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Qualification" name="education" value="Mtech" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputPassword4">Occupation</label>
                      <input type="text" class="form-control" id="exampleInputPassword4" placeholder="Occupation" name="occupation" value="Student" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputName1">Address</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Address" name="address" value="Sangli" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputCity1">City</label>
                      <input type="text" class="form-control" id="exampleInputCity1" placeholder="City" name="city" value="Sangli" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputCity1">State</label>
                      <input type="text" class="form-control" id="exampleInputCity1" placeholder="State" name="state" value="Maharastra" required >
                    </div>
                    <div class="form-group col-sm-6">
                      <label for="exampleInputCity1">Nationality</label>
                      <input type="text" class="form-control" id="exampleInputCity1" placeholder="City" name="nationality" value="Indian" required >
                    </div>
                   
                    <div class="form-group col-sm-6">
                      <label for="exampleInputPassword4">Adhar No</label>
                      <input type="number" class="form-control" id="exampleInputPassword4" placeholder="Adhar No" name="adharno" value="1234-1234-123" required >
                    </div>
                    
                    <!-- <div class="form-group col-sm-6">
                      <label>Upload Image</label>
                      <input type="file" name="img[]" class="file-upload-default">
                      <div class="input-group col-xs-12">
